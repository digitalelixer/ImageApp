<p>
  <strong>Title:</strong>
  <%= @image.title %>
</p>

<p>
  <%= image_tag(@image.photo) %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @image.text %>
</p>
<h2>Comments</h2>
<% @image.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@image, @image.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Image List', images_path %>
