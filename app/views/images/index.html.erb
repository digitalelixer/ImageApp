<h1>Listing images</h1>
<%= link_to 'New image', new_image_path %>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @images.each do |image| %>
    <tr>
      <td><%= image.title %></td>
      <td><%= image.text %></td>
      <td><%= link_to 'Show', image_path(image) %></td>
      <td><%= link_to 'Edit', edit_image_path(image) %></td>
      <td><%= link_to 'Destroy',
                                image_path(image),
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %></td>
      
    </tr>
  <% end %>
</table>